<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgAffinity"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_menu_unit"
        />

    <TextView
        android:id="@+id/lblNomUnit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:textStyle="bold"
        android:text="Nom du unit"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_toEndOf="@id/imgAffinity"/>

    <ImageView
        android:id="@+id/imgUnit"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:src="@drawable/ic_menu_exploration"
        android:layout_below="@id/lblNomUnit"/>

    <ImageView
        android:id="@+id/imgLife"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_menu_unit"
        android:layout_below="@id/imgUnit"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/lblLife"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="3"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/imgUnit"
        android:layout_toEndOf="@id/imgLife"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/imgSpeed"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/imgUnit"
        android:layout_toEndOf="@id/lblLife"
        android:src="@drawable/ic_menu_unit"
        />

    <TextView
        android:id="@+id/lblSpeed"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="3"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/imgUnit"
        android:layout_toEndOf="@id/imgSpeed"
        android:gravity="center"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/runesUnit"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:name="cstj.qc.ca.andromia.fragments.UnitDetailFragment"
        app:layoutManager="LinearLayoutManager"
        tools:context="cstj.qc.ca.andromia.fragments.UnitDetailFragment"
        tools:listitem="@layout/card_runes"
        android:layout_below="@id/imgSpeed"/>

    <TextView
        android:id="@+id/lblNumber"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="12"
        android:textStyle="bold"
        android:layout_below="@id/runesUnit"
        android:layout_toStartOf="@id/lblSet"/>

    <TextView
        android:id="@+id/lblSet"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:text="A2017"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/runesUnit"
        />

</RelativeLayout>

